@model Customer

<form method="post" class="row" asp-action="Feedback" asp-controller="Email">
    <input asp-for="Id" type="hidden"/>
    <div class="border p-3">
        <div class="form-floating py-2 col-12">
            <input asp-for="Feedback" class="form-control border-0 shadow" />
            <label asp-for="Feedback" class="ms-2"></label>
            <span asp-validation-for="Feedback" class="text-danger"></span>
        </div>
        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Create</button>
            </div>
        </div>
    </div>
</form>