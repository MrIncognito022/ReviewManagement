@model IEnumerable<Customer>
<div class="card shadow border-0 mt-4">
    @*<img class="card-img-top" src="~/photo/reviewImage.jpg" alt="Card image cap">*@
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Send Email To All Customers</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mt-4">
            <div class="col-4"></div>
            <div class="col-4 col-md-4">
                <a asp-controller="Email" asp-action="SendFeedbackEmails" class="btn btn-outline-dark form-control">Send</a>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</div>


<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12">
            <table id="myTable" class="display">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Checkout date</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.CheckoutDate</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('#myTable').DataTable();
        });
    </script>
}
